# 服务器配置
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# 数据库配置 (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_NAME=poetry_learning

# N8N配置
N8N_BASE_URL=http://localhost:5678
N8N_API_KEY=your_n8n_api_key_here

# AI服务配置 (优先使用DeepSeek)
# DeepSeek API (主要AI模型)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# 国内AI服务 (备用)
# 百度API
BAIDU_API_KEY=your_baidu_api_key
BAIDU_SECRET_KEY=your_baidu_secret_key

# 阿里云API
ALI_API_KEY=your_ali_api_key

# 腾讯云API  
TENCENT_SECRET_ID=your_tencent_secret_id
TENCENT_SECRET_KEY=your_tencent_secret_key

# OpenAI配置 (备用)
OPENAI_API_KEY=your_openai_api_key_here

# JWT配置
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# 文件上传配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,audio/mpeg,audio/wav

# 缓存配置
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/app.log

# 安全配置
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# AI服务配置
AI_IMAGE_CACHE_DIR=uploads/images
AI_AUDIO_CACHE_DIR=uploads/audio
AI_PREGENERATE_ENABLED=true
AI_BATCH_SIZE=5

# 监控配置
MONITORING_ENABLED=false
MONITORING_ENDPOINT=http://localhost:3001/metrics